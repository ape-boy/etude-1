{
  "name": "ai-chatops-weekly-report",
  "displayName": "AI ChatOps Weekly Report",
  "description": "VSCode extension for AI ChatOps weekly report generation",
  "version": "2.0.0",
  "publisher": "ai-chatops-team",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "keywords": [
    "ai",
    "chatops",
    "weekly-report",
    "reporting"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/ai-chatops-weekly-report.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/ai-chatops-weekly-report/issues"
  },
  "homepage": "https://github.com/your-org/ai-chatops-weekly-report#readme",
  "license": "MIT",
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-chatops-reports-container",
          "title": "AI ChatOps Reports",
          "icon": "$(file-text)"
        }
      ]
    },
    "views": {
      "ai-chatops-reports-container": [
        {
          "id": "aiChatOpsReports",
          "name": "Weekly Reports",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "aiChatOps.processWeeklyReport",
        "title": "Generate Weekly Report",
        "icon": "$(file-text)"
      },
      {
        "command": "aiChatOps.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "aiChatOps.refresh",
          "when": "view == aiChatOpsReports",
          "group": "navigation"
        },
        {
          "command": "aiChatOps.processWeeklyReport",
          "when": "view == aiChatOpsReports",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "aiChatOps.processWeeklyReport",
          "title": "AI ChatOps: Generate Weekly Report"
        }
      ]
    },
    "configuration": {
      "title": "AI ChatOps Weekly Report",
      "properties": {
        "aiChatOps.apiUrl": {
          "type": "string",
          "default": "http://localhost:3005",
          "description": "Base URL for AI ChatOps API"
        },
        "aiChatOps.authToken": {
          "type": "string",
          "default": "",
          "description": "Authentication token for AI ChatOps API"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production",
    "compile:dev": "webpack --mode development", 
    "watch": "webpack --mode development --watch",
    "package": "vsce package",
    "publish": "vsce publish",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --ext .js,.ts --fix"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.3.4",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.45.0"
  },
  "dependencies": {
    "axios": "^1.11.0"
  }
}