{
  "workflow": {
    "name": "clean-development-workflow",
    "version": "1.0.0",
    "description": "체계적인 문제 분할과 todo checkpoint 기반 개발 워크플로우",
    "phases": {
      "analysis": {
        "description": "요구사항 분석 및 현황 파악",
        "steps": ["requirement-analysis", "current-state-assessment", "constraint-identification"],
        "mandatory_outputs": ["analysis-report", "requirement-doc"]
      },
      "planning": {
        "description": "작업 계획 수립 및 체크포인트 설정",
        "steps": ["task-decomposition", "priority-setting", "checkpoint-definition"],
        "mandatory_outputs": ["project-plan", "todo-checkpoints", "timeline"]
      },
      "implementation": {
        "description": "단계별 구현 및 중간 검증",
        "steps": ["incremental-development", "intermediate-verification", "progress-tracking"],
        "mandatory_outputs": ["implementation-code", "test-results", "progress-reports"]
      },
      "validation": {
        "description": "품질 확인 및 최종 검증",
        "steps": ["quality-check", "integration-test", "documentation"],
        "mandatory_outputs": ["quality-report", "test-coverage", "final-documentation"]
      }
    },
    "checkpoint_system": {
      "levels": {
        "CRITICAL": "프로젝트 핵심 기능, 실패 시 전체 프로젝트 영향",
        "HIGH": "주요 기능 구현, 사용자 경험에 직접적 영향",
        "MEDIUM": "품질 개선 및 성능 최적화",
        "LOW": "부가 기능 및 편의성 개선"
      },
      "statuses": {
        "pending": "대기 중",
        "in_progress": "진행 중",
        "blocked": "차단됨 (의존성 또는 외부 요인)",
        "completed": "완료",
        "verified": "검증 완료"
      }
    },
    "documentation_structure": {
      "workflow": "워크플로우 관련 문서 및 프로세스",
      "results": "작업 결과물 및 산출물",
      "checkpoints": "체크포인트 이력 및 진행 상황",
      "analysis": "분석 결과 및 의사결정 근거"
    }
  },
  "automation": {
    "auto_checkpoint_creation": true,
    "progress_tracking": true,
    "result_documentation": true,
    "quality_gates": ["syntax-check", "test-execution", "performance-check"]
  }
}